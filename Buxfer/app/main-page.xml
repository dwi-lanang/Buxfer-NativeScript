<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout margin="50">
    <ActivityIndicator busy="{{ isLoading }}" />
    <Label text="Login To Buxfer" cssClass="title" textWrap="true"/>
    <Label text="Use your name & password to get started!" cssClass="message"/>
    <TextField hint="Username" text="{{ username }}" width="250"/>
    <TextField hint="Password" text="{{ password }}" secure="true" width="250"/>
    <Label text="Remember Me" textWrap="true" margin="10" width="50"/> 
    <Switch checked="{{ rememberMe }}" />
    <Button text="Login" tap="{{ loginButtonClicked }}"/>
   </StackLayout>
</Page>